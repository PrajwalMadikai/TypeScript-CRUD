{
  "compilerOptions": {
    "rootDir": "./src",  // Set this to 'src' to prevent src from being mirrored in dist
    "typeRoots": ["./node_modules/@types", "src/types"], 
    "lib": ["ESNext"], 
    "target": "ES6", 
    "module": "CommonJS", 
    "baseUrl": "./src", 
    "moduleResolution": "node", 
    "esModuleInterop": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "skipDefaultLibCheck": true, 
    "outDir": "./dist", 
    "allowSyntheticDefaultImports": true 
  },
  "include": ["src/**/*.ts", "src/types"],  // Ensure all src files and types are included
  "exclude": ["node_modules"] 
}
